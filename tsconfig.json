{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    "baseUrl": "./",
    "paths": {
      "app/*": ["src/app/*"],
      "assets/*": ["src/assets/*"],
      "pages/*": ["src/pages/*"],
      "widgets/*": ["src/widgets/*"],
      "hooks/*": ["src/hooks/*"],
      "components/*": ["src/components/*"],
      "styles/*": ["src/styles/*"],
      "shared/*": ["src/shared/*"],
      "types/*": ["src/types/*"],
      "constants/*": ["src/constants/*"],
      "states/*": ["src/states/*"]
    }
  },
  "include": [
    "src",
    "vite.config.ts",
    "custom.d.ts",
    "src/assets/svg/svg.d.ts",
    "src/assets/icons/dark/svg.d.ts",
    "src/assets/icons/light/svg.d.ts"
  ],

  "references": [{ "path": "./tsconfig.node.json" }]
}
